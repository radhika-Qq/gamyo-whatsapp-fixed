{
  "name": "gamyo-backend",
  "version": "2.0.0",
  "description": "Gamyo.ai - AI-powered social media management backend (Sails.js + MongoDB)",
  "main": "app.js",
  "keywords": [
    "sails",
    "gamyo",
    "whatsapp",
    "facebook",
    "instagram",
    "linkedin",
    "ai"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "debug": "node --inspect app.js",
    "worker": "node scripts/queueWorker.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\""
  },
  "dependencies": {
    "sails": "^1.5.14",
    "sails-mongo": "^2.1.2",
    "@sailshq/connect-redis": "^3.2.1",
    "@sailshq/lodash": "^3.10.4",
    "@sailshq/socket.io-redis": "^5.2.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "bullmq": "^5.1.0",
    "winston": "^3.11.0",
    "@sentry/node": "^7.93.0",
    "aws-sdk": "^2.1517.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "form-data": "^4.0.0",
    "uuid": "^9.0.1",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "@sailshq/eslint": "^4.19.3",
    "grunt": "^1.6.1"
  }
}

